{
    "name": "realtime-sync",
    "displayName": "Realtime Sync",
    "description": "Sync file edits between multiple people in realtime",
    "version": "0.0.1",
    "publisher": "Otter-Co",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.startUpRS",
        "onCommand:extension.startRSServer",
        "onCommand:extension.stopRSServer",
        "onCommand:extension.addFileToRS",
        "onCommand:extension.remFileFromRS",
        "onCommand:extension.joinRSServer",
        "onCommand:extension.leaveRSServer"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Realtime Sync Configuration",
            "properties": {
                "realtime_sync.userName": {
                    "type": "string",
                    "default": false,
                    "description": "Username to use by default"
                },
                "realtime_sync.serverPort": {
                    "type": "integer",
                    "default": 8117,
                    "description": "Port to host server on"
                },
                "realtime_sync.clientPort": {
                    "type": "integer",
                    "default": 8117,
                    "description": "Port to connect to with client"
                }
            }
        },
        "commands": [
            {
                "category": "Realtime Sync",
                "title": "Start Up Realtime Sync",
                "command": "extension.startUpRS"
            },
            {
                "category": "Realtime Sync",
                "title": "Start Realtime Sync Server",
                "command": "extension.startRSServer"
            },
            {
                "category": "Realtime Sync",
                "title": "Stop Realtime Sync Server",
                "command": "extension.stopRSServer"
            },
            {
                "category": "Realtime Sync",
                "title": "Add File to Remote Sync Server",
                "command": "extension.addFileToRS"
            },
            {
                "category": "Realtime Sync",
                "title": "Remove File from Remote Sync Server",
                "command": "extension.remFileFromRS"
            },
            {
                "category": "Realtime Sync",
                "title": "Join Realtime Sync Server",
                "command": "extension.joinRSServer"
            },
            {
                "category": "Realtime Sync",
                "title": "Leave Realtime Sync Server",
                "command": "extension.leaveRSServer"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "uuid": "^3.2.1"
    }
}